{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "PDFGround",
  "version": "0.1.1",
  "identifier": "com.pdfground.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "PDFGround",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "shortDescription": "PDFGround - Advanced PDF Tools",
    "longDescription": "A powerful, secure, and private PDF toolkit for merging, splitting, compressing, and converting PDFs entirely offline."
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/hashimks987/pdfground/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEQwMDZEMzAyQkE3MDk1NEQKUldSTmxYQzZBdE1HMEdMUGt6MXFOaDhmZXJObmxxREEyVXRyaFBXZWNFWXdsWU9PMEk3Y2cwRCsK"
    }
  }
}